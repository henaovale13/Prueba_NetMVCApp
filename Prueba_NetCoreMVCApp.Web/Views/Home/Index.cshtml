@model IEnumerable<Producto>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eBay - Inicio</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Encabezado -->
    <header>
        <div class="top-bar">
            <div class="container">
                <div class="logo">
                   @* <img src="/img/ebay-logo.png" alt="eBay Logo">*@
                </div>
                <div class="user-menu">
                    <a asp-controller="Home" asp-action="Index">Inicio</a>
                    <a asp-controller="Home" asp-action="Details">Inicio</a>
                </div>
            </div>
        </div>
        <br />
        <h2>Búsqueda por categoría</h2>

        <form asp-controller="Home" asp-action="Search" method="get">
            <select name="category">
                <option value="Hogar">Hogar</option>
                <option value="Electrodomesticos">Electrodomésticos</option>
                <option value="Tecnologia">Tecnología</option>
            </select>
            <input type="submit" value="Buscar" />
        </form>

    </header>

    @if (Model != null)
    {
        <h3>Resultados:</h3>
        <ul>
            @foreach (var product in Model)
            {
                <li>
                    <a asp-controller="Home" asp-action="Details" asp-route-imageUrl="@product.ImagenUrl">
                        <img src="@product.ImagenUrl" alt="@product.Nombre" />
                    </a>
                    <h4>@product.Nombre</h4>
                    <p>@product.Descripcion</p>
                </li>
            }
        </ul>
    }
    <!-- Contenido principal -->
    <main>
        <div class="banner">
            <img src="/img/banner-img.png" alt="Banner Image">
        </div>
        <div class="featured-products">
            <div class="container">
                <h2>Productos destacados</h2>
                <div class="product-grid">
                    <div class="product-card">
                        <img src="/img/cama.jpg" alt="Product 1">
                        <h3>Nombre del producto</h3>
                        <p>Precio: $99.99</p>
                        <a href="#">Ver detalles</a>
                    </div>
                    <div class="product-card">
                        <img src="/img/comedor.jpg" alt="Product 2">
                        <h3>Nombre del producto</h3>
                        <p>Precio: $99.99</p>
                        <a href="#">Ver detalles</a>
                    </div>
                    <div class="product-card">
                        <img src="/img/cama2.jpg" alt="Product 3">
                        <h3>Nombre del producto</h3>
                        <p>Precio: $99.99</p>
                        <a href="#">Ver detalles</a>
                    </div>
                    <div class="product-card">
                        <img src="/img/sofa.jpg" alt="Product 4">
                        <h3>Nombre del producto</h3>
                        <p>Precio: $99.99</p>
                        <a href="#">Ver detalles</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <div class="container">
            <p>&copy; 2023 eBay. Todos los derechos reservados.</p>
        </div>
    </footer>

</body>

</html>
